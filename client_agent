pipeline {
    agent any

    stages {
        stage('Build and Push Docker Image') {
            steps {
                script {
                    print("working")
                    def imageName = "yarinct/jenkins-ssh-agent"
                    def dockerfileDir = "./client-agent"
                    def dockerTag = "latest"
                    def dockerImage = docker.build("${imageName}", dockerfileDir)

                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-qa4']]) {
                        dockerImage.push()
                    }
                }
            }
        }
    }
}
