pipeline {
    agent any

    stages {
        stage('Build and Push Docker Image') {
            steps {
                script {
                    print("working")
                    def imageName = "746071289977.dkr.ecr.eu-north-1.amazonaws.com/jenkins-client-agent"
                    def dockerfileDir = "./client-agent"
                    def dockerTag = "latest"
                    def dockerImage = docker.build("${imageName}", dockerfileDir)
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-qa4']]) {
                        sh 'eval $(aws ecr get-login --no-include-email --region eu-north-1)'
                        sh 'docker login --username AWS --password-stdin 746071289977.dkr.ecr.eu-north-1.amazonaws.com'
                    }
                    dockerImage.push()
                }
            }
        }
    }
}
