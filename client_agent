pipeline {
    agent any

    stages {
        stage('Build and Push Docker Image') {
            steps {
                script {
                    print("working")
                    def imageName = "746071289977.dkr.ecr.eu-north-1.amazonaws.com/jenkins-ssh-agent"
                    def dockerfileDir = "./ssh-agent"
                    def dockerTag = "latest"
                    def dockerImage = docker.build("${imageName}", dockerfileDir)
                    withAWS(region: 'eu-north-1', credentials: 'aws-qa4') {
                        sh 'aws ecr get-login-password --region eu-north-1 | docker login --username AWS --password-stdin 746071289977.dkr.ecr.eu-north-1.amazonaws.com'
                    }
                    
                    dockerImage.push()
                }
            }
        }
    }
}
