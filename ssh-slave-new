pipeline {
    agent any

    stages {
        stage('Build and Run Docker Image') {
            steps {
                script {
                    docker.build('ssh-slave', '.')
                    docker.image('ssh-slave').run()
                    withDockerRegistry([credentialsId: "yarinnewdockerhub", urL:"yarinct/jenkins-ssh-slave:latest"]) {
                    dockerImage.push()
                    }
                }
            }
        }
    }
}
