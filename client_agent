pipeline {
    agent any

    stages {
        stage('Build and Push Docker Image') {
            steps {
                script {
                    print("working")
                    def imageName = "746071289977.dkr.ecr.eu-north-1.amazonaws.com/jenkins-client-agent"
                    def dockerfileDir = "./client-agent"
                    def dockerTag = "latest"
                    def dockerImage = docker.build("${imageName}", dockerfileDir)

                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'newqa4-aws']]) {
                        // Verify AWS Region
                        sh 'aws configure get region'

                        // Test AWS Credentials
                        sh 'aws ecr describe-repositories'
                        
                        dockerImage.push()
                    }
                }
            }
        }
    }
}
