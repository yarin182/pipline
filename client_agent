pipeline {
    agent any

    stages {
        stage('Build and Push Docker Image') {
            steps {
                script {
                    print("working")
                    def imageName = "746071289977.dkr.ecr.eu-north-1.amazonaws.com/jenkins-client-agent"
                    def dockerfileDir = "./client-agent"
                    def dockerTag = "latest"
                    def dockerImage = docker.build("${imageName}", dockerfileDir)
                    
                    // Execute the AWS ECR login command and retrieve the login password
                    def ecrLoginCommand = sh(script: 'aws ecr get-login-password --region eu-north-1', returnStdout: true).trim()
                    
                    // Execute the docker login command with the AWS ECR login password
                    sh "echo '${ecrLoginCommand}' | docker login --username AWS --password-stdin 746071289977.dkr.ecr.eu-north-1.amazonaws.com"
                    
                    dockerImage.push()
                }
            }
        }
    }
}
