pipeline {
    agent any

    stages {
        stage('Build and Push Docker Image') {
            steps {
                script {
                    print("working")
                    def imageName = "746071289977.dkr.ecr.eu-north-1.amazonaws.com/jenkins-client-agent"
                    def dockerfileDir = "./client-agent"
                    def dockerTag = "latest"
                    def dockerImage = docker.build("${imageName}", dockerfileDir)
                    withCredentials([usernamePassword(credentialsId: 'aws-qa4', usernameVariable: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                        sh 'docker login --username $AWS_ACCESS_KEY_ID --password $AWS_SECRET_ACCESS_KEY 746071289977.dkr.ecr.eu-north-1.amazonaws.com'
                    }
                    
                    dockerImage.push()
                }
            }
        }
    }
}
